<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

    <com.jxkr.common.library.pickphoto.ExtendedViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:id="@+id/ll_comm_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/colorPrimaryHalf"
        android:clickable="true" >

        <Button
            android:id="@+id/topbar_left_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_arrow_back_white"
            android:drawablePadding="@dimen/tiny_space"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="6dp"
            android:paddingRight="40dp"
            android:paddingTop="5dp"
            android:text="预览"
            android:textColor="@drawable/photo_xml_back_textcolor"
            android:textSize="@dimen/topbar_right_textSize"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_image_num"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="40dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:text="1/25"
            android:textColor="@drawable/photo_xml_back_textcolor"
            android:textSize="@dimen/topbar_right_textSize"
            android:visibility="visible" />
    </RelativeLayout>

</FrameLayout>