<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/commentLayout"
    android:padding="8dp" >

    <com.example.common.view.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/default_photo_grey"
        android:scaleType="centerCrop"
         />


    <com.rey.material.widget.TextView
        android:id="@+id/name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/image"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="随风飘扬逝去的远方"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <com.rey.material.widget.TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/image"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="08-06 13:22"
        android:textColor="@color/colorTextSecondPrimary"
        android:textSize="12sp" />
    
       <com.rey.material.widget.TextView
        android:id="@+id/tv_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_toRightOf="@+id/date"
          android:layout_alignBottom="@+id/date"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="删除"
        android:visibility="gone"
        android:textColor="#99ff0000"
        android:textSize="12sp" />

    <com.rey.material.widget.TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/image"
        android:text="想带着你私奔，私奔到遥远的城镇，想带着你私奔，私奔到遥远的城镇，想带着你私奔，私奔到遥远的城镇"
        android:textColor="@color/colorTextPrimary"
        android:textSize="13sp" />

